@model List<person>


    <h1> All Employees....</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">firstname</th>
                <th scope="col">lastname</th>
                <th scope="col">Address</th>
                <th scope="col">Sex</th>
                <th scope="col">Salary</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr scope="row">
                <td><a asp-action="Detail" asp-route-id="@employee.Id">@employee.firstname</a></td>
                <td>@employee.lastname</td>
                <td>@employee.Address</td>
                <td>@employee.Sex</td>
                <td>@employee.Salary</td>
                <td><a class="btn btn-warning" href="/Employee/Edit?id=@employee.Id">Edit</a></td>
                <td><a class="btn btn-danger" href="/Employee/Delete?id=@employee.Id">Delete</a></td>

            </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-primary"asp-controller="Employee" asp-action="Add"  role="button">Add</a>
